generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullname  String
  document  String   @unique()
  email     String
  role      String
  tasks     TaskUser[]

  @@map("users")
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  deadline    DateTime
  creatorId   String
  responsible TaskUser[]

  @@map("tasks")
}

model TaskUser {
  id          String   @id @default(uuid())
  taskId      String
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  task        Task     @relation(fields: [taskId], references: [id])

  @@map("task_user")
}
